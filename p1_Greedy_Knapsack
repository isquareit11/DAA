#include<iostream>
using namespace std;

struct arr{double value,double weight,double ratio };

int main(){
  double capacity;
  double profit=0;
  cout<<"Enter the max capacity of knapsack";
  cin>>capacity;
  cout<<"Enter the number of items present";
  int n;
  arr a[n];
  cin>>a[n];

  for(int i=1;i<n-1;i++){
      cout<<"Enter the value of item : "<<i;
      cin>>a[i].value;
      cout<<"Enter the weighth of item: "<<i;
      cin>>a[i].weight;
      a[i].ratio=a[i].value/a[i].weight;

  }

  for(int i=1;i<n-1;i++){
    for(int j=1;j<n-1;j++){
      if(a[j].ratio<a[j+1].ratio){
        double temp_ratio;
        temp_ratio=a[j].ratio;
        a[j].ratio=a[j+1].ratio;
        a[j+1].ratio=temp_ratio;

        double temp_value;
        temp_value=a[j].value;
        a[j].value=a[j+1].value;
        a[j+1].value=temp_value;

        double temp_weight;
        temp_weight=a[j].weight;
        a[j].weight=a[j+1].weight;
        a[j+1].weight=temp_weight;


      }
    }
  }

  for(int i=1;i<n-1;i++){
    if(a[i].weight<capacity){
      capacity=capacity-a[i].weight;
      profit=profit+a[i].value;
    }
    else{
      profit=profit+(capacity/(a[i].weight*a[i].value));
    }
  }
  cout<<"Max profit: "<<profit;
};
